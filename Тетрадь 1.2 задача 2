#include <iostream>
#include <vector>
using namespace std;
int main(){
	vector<int> A = { 0,1,2,3,4,3,2,1,0 };
	int mid, left = 0, right = A.size() - 1;
	int maximum = 0;
	while (left <= right) {
		mid = (left + right) / 2;
		if (left < A[mid]) {
			left = mid + 1;
		}
		else if (left > A[mid]) {
			maximum = mid;
			right = mid - 1;
			cout << left-1;
			break;
		}
		else {
			cout << left-1;
			break;
		}
	}

}
